{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@": ["./src/*"],
      "@core/*": ["./src/core/*"],
      "@extensions/*": ["./src/extensions/*"],
      "@features/*": ["./src/features/*"],
      "@components/*": ["./src/components/*"],
      "@helpers/*": ["./src/core/helpers/*"],
      "@packages/*": ["../*"],
      "@converter/*": ["./src/core/super-converter/*"],
      "@tests/*": ["./src/tests/*"],
      "@translator": ["./src/core/super-converter/v3/node-translator/"],
      "@superdoc/painter-dom": ["../layout-engine/painters/dom/src"],
      "@superdoc/pm-adapter": ["./src/types/pm-adapter-shim.d.ts"],
      "@superdoc/layout-bridge": ["../layout-engine/layout-bridge/src"],
      "@superdoc/contracts": ["../layout-engine/contracts/src"],
      "@superdoc/geometry-utils": ["../layout-engine/geometry-utils/src"],
      "@superdoc/url-validation": ["../../shared/url-validation/index.d.ts"],
      "@superdoc/preset-geometry": ["../preset-geometry/index.d.ts"]
    }
  },
  "include": [
    "src/types/**/*.d.ts",
    "src/schema/**/*.d.ts",
    "src/core/Attribute.ts",
    "src/core/EventEmitter.ts",
    "src/core/Extension.ts",
    "src/core/Mark.ts",
    "src/core/Node.ts",
    "src/core/OxmlNode.ts",
    "src/core/PresentationEditor.ts",
    "src/core/commands/core-command-map.d.ts",
    "src/core/helpers/getExtensionConfigField.ts",
    "src/core/header-footer/HeaderFooterRegistry.ts",
    "src/core/types/**/*.ts",
    "src/core/utilities/callOrGet.ts",
    "src/extensions/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js",
    "**/*.test.ts",
    "**/*.test.js",
    "src/core/super-converter",
    "src/core/index.ts",
    "src/core/Editor.ts",
    "src/tests"
  ]
}
