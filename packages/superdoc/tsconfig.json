{
  "extends": "../../tsconfig.base.json",
  "include": ["../../packages/superdoc/src/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": "../../",
    "outDir": "dist",
    "declarationMap": true,
    "skipLibCheck": true,
    "paths": {
      "@superdoc/common": ["../../shared/common/index.ts"],
      "@superdoc/common/*": ["../../shared/common/*"]
    },
    "typeRoots": ["./node_modules/@types/*", "../../node_modules/@types/*"]
  },
  "exclude": ["node_modules", "dist", "**/*.test.js", "**/*.test.ts"]
}
